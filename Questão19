#include <stdio.h>
#include <assert.h>
#include <gc.h>

int main(void){
    int i;
    const int size = 100000000;
   
  GC_INIT();
    for (i = 0; i < size; ++i){
      
      int **a = GC_MALLOC(sizeof *a);
      int *b = GC_MALLOC_ATOMIC(sizeof *b);
      
      assert(*a == 0);
      *a = GC_REALLOC(b, 3 * sizeof *a);
      if (i == size-1){
        printf("AcÃºmulo = %zu\n", GC_get_heap_size());  
    } 
  }
    return 0;
} 
